<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/BLACK"
	    >
			
	<ListView
	    android:id="@+id/comments_list"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/submit_comment_layout"
	    android:layout_alignParentTop="true" >

	</ListView>

	<RelativeLayout
	    android:id="@id/submit_comment_layout"
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
	    android:layout_alignParentBottom="true" >

		<ImageButton
		    android:id="@+id/submit_comment_btn"
		    android:layout_width="48dp"
		    android:layout_height="48dp"
		    android:layout_alignParentRight="true"
		    android:background="?android:attr/selectableItemBackground"
		    android:src="@drawable/ic_action_send_now" />

		<EditText
		    android:id="@+id/submit_comment_body"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_alignParentLeft="true"
		    android:layout_toLeftOf="@+id/submit_comment_btn"
		    android:ems="10"
		    android:hint="@string/submit_comment_hint" >

		    <requestFocus />
		</EditText>

	</RelativeLayout>
					    
</RelativeLayout>