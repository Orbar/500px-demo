<?xml version="1.0" encoding="utf-8"?>
   
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/options_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
         >

        <RelativeLayout
            android:id="@+id/options_layout"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="#E2000000"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/options_feature"
				android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                <Spinner
				    android:id="@+id/options_feature_spinner"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="4dp"
				       android:layout_toLeftOf="@+id/options_refresh_button" />
				
				<ImageButton
				    android:id="@+id/options_refresh_button"
				    style="?android:attr/borderlessButtonStyle"
				    android:layout_width="wrap_content"
				    android:layout_height="48dp"
				    android:layout_alignBottom="@id/options_feature_spinner"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@id/options_feature_spinner"
				    android:layout_marginRight="4dp"
				    android:src="@drawable/ic_action_refresh" />
				
            </RelativeLayout>
    
	        <RelativeLayout
                android:id="@+id/options_sort"
				android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                <Spinner
				    android:id="@+id/options_sort_spinner"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="4dp"
				       android:layout_toLeftOf="@+id/options_refresh_button2" />
				
				<ImageButton
				    android:id="@+id/options_refresh_button2"
				    style="?android:attr/borderlessButtonStyle"
				    android:layout_width="wrap_content"
				    android:layout_height="48dp"
				    android:layout_alignBottom="@id/options_sort_spinner"
				    android:layout_alignParentRight="true"
				    android:layout_alignTop="@id/options_sort_spinner"
				    android:layout_marginRight="4dp"
				    android:src="@drawable/ic_action_refresh" />
				
            </RelativeLayout>
	        
		</RelativeLayout>
		

        
    </RelativeLayout>